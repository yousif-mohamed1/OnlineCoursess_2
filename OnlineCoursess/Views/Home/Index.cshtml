@model OnlineCourses.ViewModels.LandingPageViewModel
@{
    ViewData["Title"] = "الصفحة الرئيسية";
}

<section class="hero-section">
    <div class="hero-slider-background">
        <div id="heroImageSlider" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="slider-image-wrapper">
                        <img src="~/images/slider/image1.jpg" class="d-block w-100" alt="معلم يشرح للطلاب">
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="slider-image-wrapper">
                        <img src="~/images/slider/image2.jpg" class="d-block w-100" alt="عرض تقديمي">
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="slider-image-wrapper">
                        <img src="~/images/slider/image3.jpg" class="d-block w-100" alt="قاعة محاضرات">
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="slider-image-wrapper">
                        <img src="~/images/slider/image4.jpg" class="d-block w-100" alt="محاضرة تفاعلية">
                    </div>
                </div>
            </div>
            
            <!-- Carousel Indicators -->
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#heroImageSlider" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#heroImageSlider" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#heroImageSlider" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#heroImageSlider" data-bs-slide-to="3" aria-label="Slide 4"></button>
            </div>
        </div>
    </div>

    <div class="hero-content-overlay">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-8">
                    <div class="hero-text-wrapper">
                        <h1 class="hero-title">أفضل فرص للتعلم<br />بين يديك!</h1>
                        <p class="hero-subtitle">ابدأ رحلتك التعليمية اليوم.. وتعلم مهارات تغير مستقبلك.</p>
                        <div class="hero-buttons">
                            <a asp-controller="Student" asp-action="Register" class="btn btn-dark btn-lg"> انضم كطالب</a>
                            <a asp-controller="Instructor" asp-action="Register" class="btn btn-outline-dark btn-lg">انضم كمحاضر</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="features-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card feature-card-blue">
                    <div class="feature-icon">
                        <i class="fas fa-check"></i>
                    </div>
                    <h3 class="feature-title">خطط واضحة</h3>
                    <p class="feature-description">نوفر لك تجربة تعلم جذابة ومبنية على أسس واضحة، والموضوع، والسهل لفهم العملي لتطوير مستقبلك معنا.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-credit-card"></i>
                    </div>
                    <h3 class="feature-title">مهارات جديدة</h3>
                    <p class="feature-description">تعلم من خلال المحتوى عبر مكتبة واسعة من الدورات المتنوعة التي تناسب جميع المستويات.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-link"></i>
                    </div>
                    <h3 class="feature-title">وفر الوقت والجهد!</h3>
                    <p class="feature-description">منصة تعليمية متكاملة تقدم لك كل محتوى تحتاجه بسهولة وبدقة لتناسب المهارات بطريقة عملية وفعالة.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="watch-courses-section">
    <div class="container-fluid">
        <div class="row align-items-center g-0">
            <div class="col-lg-5">
                <div class="watch-courses-images">
                    <div class="course-image-group">
                        <img src="~/images/courses/course1.jpg" alt="دورة تعليمية 1" class="course-img main-img">
                        <img src="~/images/courses/course2.jpg" alt="دورة تعليمية 2" class="course-img overlay-img">
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="watch-courses-content">
                    <div class="section-header">
                        <div class="header-accent"></div>
                        <h2 class="section-title">شاهد دوراتنا</h2>
                    </div>
                    <p class="section-description">معلومات لحل الصراع بين المحامين الرئيسيين في الفريق، الكسكيشيك البيروقراطية البيروقراطية</p>
                    <a href="#" class="btn btn-link-discover">
                        اكتشف المزيد <i class="fas fa-chevron-left ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

